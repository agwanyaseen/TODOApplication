<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateActivity">

    <Button
            android:text="SAVE"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:id="@+id/Save"
            android:onClick="update"
            android:layout_alignTop="@+id/cancel" android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"/>
    <Button
            android:text="CLEAR"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="492dp"
            android:inputType="textPersonName"
            android:gravity="top"
            android:ems="10"
            android:text="DemoText"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:id="@+id/editText" android:layout_alignParentBottom="true"/>
</RelativeLayout>